{
  "variables": {
    "disk_size": "4G",
    "version": "7.0.3",
    "iso_url": "VMware-VMvisor-Installer-7.0U3d-19482537.x86_64.iso",
    "iso_checksum": "sha256:c1e5e8ea581e38e4bead4cb4b10b806616282540c3fdd6460eff680be1b3d9e6"
  },
  "builders": [
    {
      "name": "esxi-{{user `version`}}-amd64-libvirt",
      "type": "qemu",
      "accelerator": "kvm",
      "cpus": 4,
      "memory": 4096,
      "qemuargs": [
        ["-cpu", "host"]
      ],
      "headless": true,
      "http_directory": ".",
      "format": "qcow2",
      "disk_size": "{{user `disk_size`}}",
      "disk_interface": "ide",
      "disk_discard": "unmap",
      "net_bridge": "virbr0",
      "net_device": "vmxnet3",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "ssh_username": "root",
      "ssh_password": "HeyH0Password!",
      "ssh_timeout": "60m",
      "boot_wait": "3s",
      "boot_command": [
        "<enter>",
        "<wait>",
        "<leftShiftOn>O<leftShiftOff>",
        "<wait>",
        " netdevice=vmnic0",
        " bootproto=dhcp",
        " ks=http://{{.HTTPIP}}:{{.HTTPPort}}/ks.cfg",
        "<enter>"
      ],
      "shutdown_command": "poweroff; while true; do sleep 10; done;"
    },
    {
      "name": "esxi-{{user `version`}}-uefi-amd64-libvirt",
      "type": "qemu",
      "accelerator": "kvm",
      "cpus": 4,
      "memory": 4096,
      "qemuargs": [
        ["-bios", "/usr/share/ovmf/OVMF.fd"],
        ["-cpu", "host"]
      ],
      "headless": false,
      "http_directory": ".",
      "format": "qcow2",
      "disk_size": "{{user `disk_size`}}",
      "disk_interface": "ide",
      "disk_discard": "unmap",
      "net_bridge": "virbr0",
      "net_device": "vmxnet3",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "ssh_username": "root",
      "ssh_password": "HeyH0Password!",
      "ssh_timeout": "60m",
      "boot_wait": "3s",
      "boot_command": [
        "<enter>",
        "<wait>",
        "<leftShiftOn>O<leftShiftOff>",
        "<wait>",
        " netdevice=vmnic0",
        " bootproto=dhcp",
        " ks=http://{{.HTTPIP}}:{{.HTTPPort}}/ks.cfg",
        "<enter>"
      ],
      "shutdown_command": "poweroff; while true; do sleep 10; done;"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "info.sh",
      "pause_before": "30s"
    },
    {
      "type": "shell",
      "script": "sysprep.sh"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "{{.BuildName}}.box",
      "vagrantfile_template": "Vagrantfile.template",
      "only": [
        "esxi-{{user `version`}}-amd64-libvirt"
      ]
    },
    {
      "type": "vagrant",
      "output": "{{.BuildName}}.box",
      "vagrantfile_template": "Vagrantfile-uefi.template",
      "only": [
        "esxi-{{user `version`}}-uefi-amd64-libvirt"
      ]
    }
  ]
}
