{
  "variables": {
    "disk_size": "4G",
    "version": "7.0.2",
    "iso_url": "VMware-VMvisor-Installer-7.0U2a-17867351.x86_64.iso",
    "iso_checksum": "sha256:35d80d52dfca79f52eadd1c641e2f990371e834e98b3ef95914b7f950b42f629"
  },
  "builders": [
    {
      "name": "esxi-{{user `version`}}-amd64-libvirt",
      "type": "qemu",
      "accelerator": "kvm",
      "cpus": 4,
      "memory": 4096,
      "qemuargs": [
        ["-cpu", "host"]
      ],
      "headless": true,
      "http_directory": ".",
      "format": "qcow2",
      "disk_size": "{{user `disk_size`}}",
      "disk_interface": "ide",
      "disk_discard": "unmap",
      "net_bridge": "virbr0",
      "net_device": "vmxnet3",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "ssh_username": "root",
      "ssh_password": "HeyH0Password!",
      "ssh_timeout": "60m",
      "boot_wait": "3s",
      "boot_command": [
        "<enter>",
        "<wait>",
        "<leftShiftOn>O<leftShiftOff>",
        "<wait>",
        " netdevice=vmnic0",
        " bootproto=dhcp",
        " ks=http://{{.HTTPIP}}:{{.HTTPPort}}/ks.cfg",
        "<enter>"
      ],
      "shutdown_command": "poweroff; while true; do sleep 10; done;"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "info.sh",
      "pause_before": "30s"
    },
    {
      "type": "shell",
      "script": "sysprep.sh"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "{{.BuildName}}.box",
      "vagrantfile_template": "Vagrantfile.template"
    }
  ]
}
