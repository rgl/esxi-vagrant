{
  "variables": {
    "disk_size": "4096",
    "version": "7.0.2",
    "iso_url": "VMware-VMvisor-Installer-7.0U2a-17867351.x86_64.iso",
    "iso_checksum": "sha256:35d80d52dfca79f52eadd1c641e2f990371e834e98b3ef95914b7f950b42f629",
    "esxi_hostname": "{{env `ESXI_HOSTNAME`}}",
    "esxi_username": "{{env `ESXI_USERNAME`}}",
    "esxi_password": "{{env `ESXI_PASSWORD`}}",
    "esxi_datastore": "{{env `ESXI_DATASTORE`}}",
    "esxi_network": "{{env `ESXI_NETWORK`}}"
  },
  "builders": [
    {
      "type": "vmware-iso",
      "name": "esxi-{{user `version`}}-amd64-esxi",
      "vm_name": "template-esxi-{{user `version`}}-amd64-esxi",
      "version": "18",
      "guest_os_type": "vmkernel7",
      "headless": true,
      "http_directory": ".",
      "vmdk_name": "boot",
      "disk_size": "{{user `disk_size`}}",
      "disk_type_id": "thin",
      "disk_adapter_type": "pvscsi",
      "format": "vmx",
      "remote_type": "esx5",
      "remote_host": "{{user `esxi_hostname`}}",
      "remote_username": "{{user `esxi_username`}}",
      "remote_password": "{{user `esxi_password`}}",
      "remote_datastore": "{{user `esxi_datastore`}}",
      "skip_export": true,
      "keep_registered": true,
      "vnc_over_websocket": true,
      "insecure_connection": true,
      "network_adapter_type": "vmxnet3",
      "cpus": 4,
      "cores": 4,
      "memory": 4096,
      "network_name": "{{user `esxi_network`}}",
      "vmx_data": {
        "vhv.enable": "TRUE"
      },
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "ssh_username": "root",
      "ssh_password": "HeyH0Password!",
      "ssh_timeout": "60m",
      "boot_wait": "3s",
      "boot_command": [
        "<enter>",
        "<wait>",
        "<leftShiftOn>O<leftShiftOff>",
        "<wait>",
        " netdevice=vmnic0",
        " bootproto=dhcp",
        " ks=http://{{.HTTPIP}}:{{.HTTPPort}}/ks.cfg",
        "<enter>"
      ],
      "shutdown_command": "poweroff; while true; do sleep 10; done;"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "info.sh",
      "pause_before": "30s"
    },
    {
      "type": "shell",
      "script": "sysprep.sh"
    }
  ]
}
